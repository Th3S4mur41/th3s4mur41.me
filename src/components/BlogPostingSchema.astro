---
import { getPersonData, getWebsiteData } from "../utils/schemaData";
import StructuredData from "./StructuredData.astro";

interface Translation {
	language: string;
	headline?: string;
	url: string;
	publisherName?: string;
	publisherUrl?: string;
}

interface Props {
	headline: string;
	description?: string;
	datePublished: Date;
	dateModified?: Date;
	image?: {
		src: string;
		attributes?: {
			width?: number;
			height?: number;
		};
	};
	url: string;
	canonical?: string;
	translations?: Translation[];
}

const { headline, description, datePublished, dateModified, image, url, canonical, translations } = Astro.props;

const origin = Astro.url.origin;
const absolute = (maybeUrl: string) => new URL(maybeUrl, origin).href;

const personData = getPersonData(origin);
const websiteData = getWebsiteData(origin);

const blogPostingData = {
	"@type": "BlogPosting",
	"@id": url,
	headline,
	description,
	datePublished: datePublished.toISOString(),
	...(dateModified ? { dateModified: dateModified.toISOString() } : {}),
	mainEntityOfPage: {
		"@type": "WebPage",
		"@id": url,
	},
	url,
	...(canonical ? { isBasedOn: canonical } : {}),
	...(image?.src
		? {
				image: {
					"@type": "ImageObject",
					url: absolute(image.src),
					...(image.attributes?.width ? { width: image.attributes.width } : {}),
					...(image.attributes?.height ? { height: image.attributes.height } : {}),
				},
			}
		: {}),
	author: {
		"@id": `${origin}/#person`,
	},
	publisher: {
		"@id": `${origin}/#person`,
	},
	isPartOf: {
		"@id": `${origin}/#website`,
	},
	inLanguage: "en",
	...(translations && translations.length > 0
		? {
				workTranslation: translations.map((translation) => ({
					"@type": "BlogPosting",
					inLanguage: translation.language,
					headline: translation.headline || headline,
					url: translation.url,
					...(translation.publisherName || translation.publisherUrl
						? {
								publisher: {
									"@type": "Organization",
									...(translation.publisherName ? { name: translation.publisherName } : {}),
									...(translation.publisherUrl ? { url: translation.publisherUrl } : {}),
								},
							}
						: {}),
				})),
			}
		: {}),
};

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	"@id": url,
	"@graph": [websiteData, personData, blogPostingData],
	inLanguage: "en",
};
---

<StructuredData data={jsonLd} />
