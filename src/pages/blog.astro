---
import { getCollection, getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";

const blog = (await getCollection("blog")).sort(
	(a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const dateOptions = {
	// weekday: "long",
	year: "numeric",
	month: "short",
	day: "numeric",
};
---

<Layout title="blog">
{blog.map(article => (
<a href={`/blog/${article.data.slug}`} aria-labelledby={`article-header-${article.data.slug}`} aria-describedby={`article-description-${article.data.slug}`}>
<article>
			<h2 id={`article-header-${article.data.slug}`}>{article.data.title}</h2>
			<p id={`article-desciption-${article.data.slug}`}>{article.data.description}</p>
			<time datetime="{article.data.date}">{new Date(article.data.date).toLocaleDateString('en-gb', {year: "numeric",month: "short", 	day: "numeric",})}</time>
			</article>
	</a>
))}

</Layout>
